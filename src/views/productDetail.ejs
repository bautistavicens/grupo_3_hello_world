<!DOCTYPE html>
<html lang="en" class="html-home">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <script
      src="https://kit.fontawesome.com/b7372bc3ff.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <%- include('./partials/header') %>
    <main>
      <!--Producto-->
      <section class="contenedor-producto-detalle">
        <div class="producto-detalle-caja-1">
          <!--Imagen-->
          <img src="/images/<%= producto.imagenesUrl[0] %>" class="producto-detalle-img" alt="Zapato"/>
        </div>
        <!-- Contenedor Titulo & Precio--> 
        <div class="producto-detalle-caja-2">
          <p class="producto-detalle-titulo-talles"> <%= producto.titulo %> </p>
          <p class="producto-detalle-titulo-talles">$ <%= producto.precio %> </p>
          <!--Talles-->
          <h5> Talles </h5>
          <select name="producto-detalle-talles" id="select-cantidad">
            <!--JS bucle "for" -> talles -->
            =<% for( let i = 0; i < producto.talles.length; i++ ) { %>
              <option value="1"> <%= producto.talles[i] %> </option>
            <% } %>
          </select>
          <h5> Seleccionar Color: </h5>
          <div class="producto-detalle-colores">
            <span class="color-negro"></span>
            <span class="color-azul"></span>
          </div>
          <hr class="producto-detalle-linea"> 
          <button class="producto-detalle-boton-carrito">Agregar al carrito</button>
        </div>
      </section>
      <!-- Productos relacionados -->
<!-- CARROUSEL-Productos Destacados -->
<h4 class="producto-detalle-titulo-destacados">Productos Destacados</h4>
<section class="contenedor-productos-destacados">
<div class="conteItemsCarrusel-producto-detalle">
<div class="itemCarrousel-producto-detalle" id="item-carrusel-1-producto-detalle">
  <div class="tarjetaCarrusel-producto-detalle">
    
    <img class="producto-detalle-img" src="/images/img-zapato.webp" alt="">
      <p>Producto 1</p>
      <p>Precio: 20.000</p>
  </div>
  <div class="flechasCarrusel-producto-detalle">
    <a class="detalle-producto-detalle-a" href="#item-carrusel-3-producto-detalle">
       <i class="fas fa-chevron-left detalle-producto-i"></i>
    </a>
    <a class="detalle-producto-a" href="#item-carrusel-2-producto-detalle">
      <i class="fas fa-chevron-right detalle-producto-i"></i>
    </a>
  </div>
</div>

<div class="itemCarrousel-producto-detalle" id="item-carrusel-2-producto-detalle">
  <div class="tarjetaCarrusel-producto-detalle ">
    
    <img class="producto-detalle-img" src="/images/img-zapato.webp" alt="">
      <p>Producto 2</p>
      <p>Precio: 15.000</p>
  </div>
  <div class="flechasCarrusel-producto-detalle">
    <a class="detalle-producto-detalle-a" href="#item-carrusel-1-producto-detalle">
       <i class="fas fa-chevron-left detalle-producto-i"></i>
    </a>
    <a class="detalle-producto-a" href="#item-carrusel-3-producto-detalle">
      <i class="fas fa-chevron-right detalle-producto-i"></i>
    </a>
  </div>
</div>

<div class="itemCarrousel-producto-detalle" id="item-carrusel-3-producto-detalle">
  <div class="tarjetaCarrusel-producto-detalle">
    
    <img class="producto-detalle-img" src="/images/img-zapato.webp" alt="">
      <p>Producto 3</p>
      <p>Precio: 10.000</p>
  </div>
  <div class="flechasCarrusel-producto-detalle">
    <a class="detalle-producto-detalle-a" href="#item-carrusel-2-producto-detalle">
       <i class="fas fa-chevron-left detalle-producto-i"></i>
    </a>
    <a class="detalle-producto-a" href="#item-carrusel-1-producto-detalle">
      <i class="fas fa-chevron-right detalle-producto-i"></i>
    </a>
  </div>
</div>
</div>
</section>
    </main>
    <%- include('./partials/footerPrincipal') %>
  </body>
</html>
