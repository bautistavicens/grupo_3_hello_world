<!DOCTYPE html>
<html lang="en" class="html-home">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <script src="https://kit.fontawesome.com/b7372bc3ff.js" crossorigin="anonymous"></script>
    <title>Home</title>
  </head>
  <body>
  <%- include('./partials/header') %>
  <main>
      <!-- Carrousel -->
      <section class="carrousel">
        <article class="conteCarrousel">
          <div class="itemCarrousel" id="itemCarrousel-1">
            <div class="itemCarrouselTarjeta">
              <img
                class="itemCarrousel-img"
                src="/images/carrusel-img/carrusel-img-1.jpg"
                alt=""/>
            </div>
            <div class="itemCarrouselArrows">
              <a href="#itemCarrousel-3">
                <i class="fas fa-chevron-left"></i>
              </a>
              <a href="#itemCarrousel-2">
                <i class="fas fa-chevron-right"></i>
              </a>
            </div>
          </div>
          <div class="itemCarrousel" id="itemCarrousel-2">
            <div class="itemCarrouselTarjeta">
              <img
                class="itemCarrousel-img"
                src="/images/carrusel-img/carrusel-img-2.jpg"
                alt=""
              />
            </div>
            <div class="itemCarrouselArrows">
              <a href="#itemCarrousel-1">
                <i class="fas fa-chevron-left"></i>
              </a>
              <a href="#itemCarrousel-3">
                <i class="fas fa-chevron-right"></i>
              </a>
            </div>
          </div>
          <div class="itemCarrousel" id="itemCarrousel-3">
            <div class="itemCarrouselTarjeta">
              <img
                class="itemCarrousel-img"
                src="/images/carrusel-img/carrusel-img-3.jpg"
                alt=""
              />
            </div>
            <div class="itemCarrouselArrows">
              <a href="#itemCarrousel-2">
                <i class="fas fa-chevron-left"></i>
              </a>
              <a href="#itemCarrousel-1">
                <i class="fas fa-chevron-right"></i>
              </a>
            </div>
          </div>
        </article>
      </section>

      <!-- PRODUCTOS -->
      <h1 class="home-productos-destacados-titulo">PRODUCTOS DESTACADOS</h1>

      <!-- Linea -->
      <center>
        <hr class="home-productos-destacados-hr">
      </center>
      <section class="contenedor-productos-home">
        <% productos.forEach(producto => { %>
          <a href="/producto/<%= producto.id %>">
            <article class="elements-subcontainer">
              <section class="img-container">
                <img src=<%= producto.imagenesUrl[0] %> alt="producto" />
              </section>
              <section class="truck-icon-container">
                <i class="fa-solid fa-truck fa-xl"></i>
              </section>
              <section class="descripcion-container">
                <p> <%= producto.titulo %> </p>
                <p> $<%= producto.precio %> </p>
              </section>
            </article>
          </a>
        <% }); %>
      </section>

      <!-- newsletter -->

      <h3 class="newsletter-home-titulo">NUESTRO NEWSLETTER</h3>

      <form action="#" method="POST" class="create-form-home">
        <div class="control-formulario">
          <input
            type="text"
            placeholder="Email"
            name=""
            id=""
            class="control"
          />
        </div>

        <button class="boton-formulario">Inscribirse</button>
      </form>

      <h3 class="newsletter-home-titulo">@ NUESTRO NEWSLETTER</h3>

      <div class="newsletter-home-contenedor__iconos">
        <i class="fa-brands fa-facebook"></i>
        <i class="fa-brands fa-instagram"></i>
      </div>
  </main>
  <%- include('./partials/footerPrincipal') %>
  </body>
</html>
